<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <com.mymatatu.Global.TextViewExoSemiBold
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:fontName="@string/fontfilename"
                android:textSize="@dimen/show_text_views_meduim"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_data_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timer"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="To"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="From"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Saccoo Name"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Matatu No"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Selected seat(s)"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Number of seat(s)"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Price"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/to_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="To"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/from_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="From"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/sacco_name_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Saccoo Name"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/matatu_no_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Matatu No"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/total_seats_no_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="seats"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/seat_no_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Seat No"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/price_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="Price"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_data_confirm"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Total Cost"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Wallet Balance"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <CheckBox
                            android:id="@+id/insurance_checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Get Insurance"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/total_cost_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Cost"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>

                        <com.mymatatu.Global.TextViewExoSemiBold
                            android:id="@+id/wallet_balance_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="TextView"
                            app:fontName="@string/fontfilename"
                            android:textSize="@dimen/show_text_views_small"/>
                    </LinearLayout>

                </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="0.74"
                android:animateLayoutChanges="false"
                android:orientation="horizontal"
                android:weightSum="0">

                <com.mymatatu.Global.ButtonExoSemiBold
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:elevation="24dp"
                    android:text="Pay"
                    app:fontName="@string/fontfilename"
                    android:textSize="@dimen/show_text_views_small"/>

                <com.mymatatu.Global.ButtonExoSemiBold
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/textView"
                    android:layout_toStartOf="@+id/textView"
                    android:layout_weight="1"
                    android:elevation="24dp"
                    android:text="cancel"
                    app:fontName="@string/fontfilename"
                    android:textSize="@dimen/show_text_views_small"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>



